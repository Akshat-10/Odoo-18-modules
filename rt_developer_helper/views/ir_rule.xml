<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ir_rule_developer_helper_tree_inherit" model="ir.ui.view">
            <field name="name">ir_rule_developer_helper.tree</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="rt_xml_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="ir_rule_developer_helper_form_inherit" model="ir.ui.view">
            <field name="name">ir_rule_developer_helper.form</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="rt_xml_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>