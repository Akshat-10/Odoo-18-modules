<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rules for product.product -->
        <record id="product_low_stock_alert_product_user_rule" model="ir.rule">
            <field name="name">Product Low Stock Alert: User Access</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="product_low_stock_alert_product_manager_rule" model="ir.rule">
            <field name="name">Product Low Stock Alert: Manager Access</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- Record rules for product.category -->
        <record id="product_low_stock_alert_category_user_rule" model="ir.rule">
            <field name="name">Product Low Stock Alert: Category User Access</field>
            <field name="model_id" ref="product.model_product_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="product_low_stock_alert_category_manager_rule" model="ir.rule">
            <field name="name">Product Low Stock Alert: Category Manager Access</field>
            <field name="model_id" ref="product.model_product_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>