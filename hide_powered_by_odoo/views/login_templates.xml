<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="login_page_layout" inherit_id="web.login_layout" name="Login Page Layout">
        <xpath expr="//div[@class='card-body']//div[last()]" position="replace">
            <div class="text-center small mt-4 pt-3 login--footer" t-if="not disable_footer">
                <t t-if="not disable_database_manager">
                    <a class="pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
                </t>
            </div>
        </xpath>
    </template>

    <template id="remove_powered_by_odoo" inherit_id="portal.portal_record_sidebar" priority="10">
        <!-- <xpath expr="//div[child::a[@href='http://www.odoo.com?utm_source=db&amp;utm_medium=portal']]" position="replace"> -->
            <!-- Removed the Powered by Odoo link and its div -->
        <!-- </xpath> -->
        <xpath expr="//div[@class='d-none d-lg-block mt-5 small text-center text-muted']" position="replace">

        </xpath>
    </template>

</odoo>
