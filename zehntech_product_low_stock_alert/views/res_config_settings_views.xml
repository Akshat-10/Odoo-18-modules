<odoo>
    <record id="view_config_settings_low_stock_alert" model="ir.ui.view">
        <field name="name">res.config.settings.low.stock.alert</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='operations_setting_container']" position="after">
                <block title="Low Stock Alert Configuration">

                    <div class="row">
                        <div class="col-6">
                            <div style="margin-bottom: 5px;">
                                <label for="low_stock_alert_method" />
                            </div>
                            <field name="low_stock_alert_method" widget="radio"  style="margin-left:100px" />
                        </div>
                        <div class="col-6">
                            <label for="notify_user_ids" invisible='1'/>
                            <field name="notify_user_ids" widget="many2many_tags" invisible='1'/>
                        </div>
                    </div>

                     
                </block>
                  <setting help="Only add global quantity when 'Global' is selected">
                    <!-- invisible="low_stock_alert_method != 'global'" -->
                    <field name="global_minimum_qty" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>