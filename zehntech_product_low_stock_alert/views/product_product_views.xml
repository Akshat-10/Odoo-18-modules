<odoo>
    <record id="view_product_form_low_stock" model="ir.ui.view">
        <field name="name">product.product.low.stock.alert</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="alert_quantity" invisible="not show_alert_quantity" />
                <field name="show_alert_quantity" invisible="1" />
            </xpath>
        </field>
    </record>

     <record id="view_product_tree_low_stock" model="ir.ui.view">
        <field name="name">product.product.tree.low.stock.alert</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="after">
                <field name="alert_quantity" string="Alert Quantity"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="alert_quantity" invisible="not show_alert_quantity" />
                <field name="show_alert_quantity" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>